{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"noUnusedLocals": true,
		"downlevelIteration": true,

		"baseUrl": ".",
		"paths": {
			"package/*": [ "package/*" ],
		},

		"plugins": [
			{
				"name": "typescript-deno-plugin",
				"importmap": "import_map.json",
			},
		],
	},
}
